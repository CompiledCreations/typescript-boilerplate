{
  "name": "typescript-boilerplate",
  "version": "1.0.0",
  "description": "My simple typescript boilerplate",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:lint && npm run build:compile",
    "build:compile": "tsc --project ./tsconfig.json",
    "build:lint": "eslint 'src/**' --ext .ts --ext .tsx --cache --cache-location ./build/.eslintcache",
    "test": "jest",
    "test:coverage": "npm run test -- --collectCoverage"
  },
  "keywords": [],
  "author": "Matt Styles",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "jest": "^24.7.1",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  }
}
